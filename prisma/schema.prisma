enum ServiceType {
  HOUSE_SELLING
  SMALL_HOUSE_RENTING
  HOUSE_RENTAL_LEASING
  LAND_SELLING
  WORKPLACE_LEASING
  APARTMENT_LEASING
}
model Service {
  id        String   @id @default(uuid())
  name      String
  icon      String
  createdAt DateTime @default(now())
}

