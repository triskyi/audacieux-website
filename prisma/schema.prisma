generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Property {
  id        String   @id @default(uuid())
  title     String
  location  String
  price     String
  image     String
  type      String
  size      String
  featured  Boolean @default(false)
  createdAt DateTime @default(now())
  serviceType ServiceType @default(LAND_SELLING)
}

model Short {
  id          String   @id @default(uuid())
  title       String
  type        String?
  location    String?
  price       Int?
  size        String?
  video       String
  featured    Boolean @default(false)
  description String?
  createdAt   DateTime @default(now())
  serviceType ServiceType @default(LAND_SELLING)
}
